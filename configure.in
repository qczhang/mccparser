dnl Process this file with autoconf to produce a configure script.


AC_INIT(src/mccparser.h)

PACKAGE=mccparser
VERSION=1.2
AC_DEFINE_UNQUOTED(PACKAGE, "$PACKAGE")
AC_DEFINE_UNQUOTED(VERSION, "$VERSION")

AC_PROG_MAKE_SET

AC_PROG_CXX
AC_LANG_CPLUSPLUS
AC_CANONICAL_HOST
AC_PROG_LEX
AC_PROG_YACC

case "$host" in
*-linux-gnu) CXXFLAGS="-Wall -O2 -g";
             CXXSHFLAGS="-Wall -O2 -g";
	     DEPFLAGS="-MM"
	     LDFLAGS="-static"
	     LINKOPTIONS= ;;
*-sgi-*)     CXXFLAGS="-O2 -g -woff 1681 -ptused";
             CXXSHFLAGS="-O2 -g -woff 1681 -ptused";
	     DEPFLAGS="-M"
	     LDFLAGS=
	     LINKOPTIONS= ;;
*-sun-*)     CXXFLAGS="-Wall -O2 -g";
             CXXSHFLAGS="-Wall -O2 -g -fPIC";
	     DEPFLAGS="-MM"
	     LDFLAGS="-static"
	     LINKOPTIONS= ;;
esac


AC_PROG_INSTALL
AC_PATH_PROG(AR,ar)

AC_ARG_WITH(malloc,
[  --with-malloc           replace STL allocator with malloc],
AC_DEFINE(__USE_MALLOC),
)


AC_SUBST(PACKAGE)
AC_SUBST(VERSION)
AC_SUBST(CXXSHFLAGS)
AC_SUBST(DEPFLAGS)
AC_SUBST(LDFLAGS)
AC_SUBST(LINKOPTIONS)

AC_OUTPUT( Makefile docs/Makefile src/Makefile )
